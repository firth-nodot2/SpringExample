<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="userDataProvider" class="com.ioc.coupling.UserDatabase" />

    <bean id="webServiceProvider" class="com.ioc.coupling.WebService" />

    <bean id="userManagerWithData" class="com.ioc.coupling.UserManager">
        <constructor-arg ref="userDataProvider" />
    </bean>

    <bean id="userManagerWithWeb" class="com.ioc.coupling.UserManager">
        <constructor-arg ref="webServiceProvider" />
    </bean>

</beans>